# ClipGen-AI Backend Environment Configuration
# Copy this file to .env and update the values according to your setup

# Application Settings
APP_NAME=ClipGen-AI
VERSION=1.0.0
DEBUG=true

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
# REDIS_PASSWORD=your_redis_password_here
